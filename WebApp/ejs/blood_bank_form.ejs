<% include header.ejs %>
	<link rel="stylesheet" href="/blood_bank_form.css">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-3">
			</div>
			<div class="col-md-6 form-block">
				<form action="/insert/blood_bank" method="POST">
					<div class="form-group">
						<label for="id"></label>
						<input type="text" class="form-control input-lg" id="id" name="id" required placeholder="ID">
					</div>
					<div class="form-group">
						<label for="recipents"></label>
						<input type="text" class="form-control input-lg" id="recipents" name="recipents" placeholder="Recipents">
					</div>
					<div class="form-group">
						<label for="donors"></label>
						<input type="text" class="form-control input-lg" id="donors" name="donors" placeholder="Donor">
					</div>
					<div class="form-group">
						<label for="blood_group"></label>
						<input type="text" class="form-control input-lg" id="blood_group" name="blood_group" placeholder="Blood Group">
					</div>
					<div class="form-group">
						<label for="quantity"></label>
						<input type="text" class="form-control input-lg" id="quantity" name="quantity" placeholder="Quantity">
					</div>
					<button type="submit" class="btn btn-primary btn-lg">INSERT</button>
				</form>
			</div>
			<div class="col-md-3">
			</div>
		</div>
	</div>
<% include footer.ejs %>
