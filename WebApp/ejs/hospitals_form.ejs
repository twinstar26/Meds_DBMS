<% include header.ejs %>
	<link rel="stylesheet" href="/hospitals_form.css">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-3">
			</div>
			<div class="col-md-6 form-block">
				<form action="/insert/hospitals" method="POST">
					<div class="form-group">
						<label for="unique_id"></label>
						<input type="text" class="form-control input-lg" id="unique_id" name="unique_id" required placeholder="Unique Hospital ID">
					</div>
					<div class="form-group">
						<label for="name"></label>
						<input type="text" class="form-control input-lg" id="name" name="name" placeholder="Name">						
					</div>
					<div class="form-group">
						<label for="address"></label>
						<textarea class="form-control input-lg" rows="5" id="address" name="address" placeholder="Address"></textarea>
					</div>
					<div class="form-group">
						<label for="contact_det"></label>
						<input type="text" class="form-control input-lg" id="contact_det" name="contact_det" placeholder="Contact Detail">
					</div>
					<div class="form-group">
						<label for="field_of_spec"></label>
						<input type="text" class="form-control input-lg" id="field_of_spec" name="field_of_spec" placeholder="Field Of Specialization">
					</div>
					<div class="form-group">
						<label for="latitude"></label>
						<input type="text" class="form-control input-lg" id="latitude" name="latitude" placeholder="Latitude">
					</div>
					<div class="form-group">
						<label for="longitude"></label>
						<input type="text" class="form-control input-lg" id="longitude" name="longitude" placeholder="Longitude">
					</div>
					<div class="form-group">
						<label for="capacity"></label>
						<input type="text" class="form-control input-lg" id="capacity" name="capacity" placeholder="Capacity">
					</div>
					<button type="submit" class="btn btn-primary btn-lg">INSERT</button>
				</form>
			</div>
			<div class="col-md-3">
			</div>
		</div>
	</div>
<% include footer.ejs %>
